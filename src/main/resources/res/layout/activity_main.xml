<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/bg_main" android:layout_width="match_parent" android:layout_height="match_parent">
    <WebView android:id="@+id/web_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/layout_main" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <FrameLayout android:layout_gravity="center_vertical" android:id="@+id/upDownLayout" android:layout_width="240dp" android:layout_height="260dp">
                    <View android:layout_gravity="center" android:background="@drawable/bg" android:layout_width="50dp" android:layout_height="match_parent"/>
                    <View android:layout_gravity="center" android:id="@+id/upDown" android:background="@drawable/ball_blue" android:layout_width="80dp" android:layout_height="80dp"/>
                </FrameLayout>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <FrameLayout android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/leftRightLayout" android:layout_width="260dp" android:layout_height="240dp" android:layout_marginRight="32dp">
                    <View android:layout_gravity="center" android:background="@drawable/bg" android:layout_width="match_parent" android:layout_height="50dp"/>
                    <View android:layout_gravity="center" android:id="@+id/leftRight" android:background="@drawable/ball_blue" android:layout_width="80dp" android:layout_height="80dp"/>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout android:padding="15dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:textSize="16dp" android:textColor="#03a5fa" android:layout_gravity="center_horizontal" android:background="@drawable/btn_off" android:paddingLeft="16dp" android:paddingTop="5dp" android:paddingRight="16dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xe Điều Khiển Từ Xa"/>
            <Button android:textSize="15dp" android:textColor="#ff03a5fa" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/btnPush" android:background="@drawable/btn_off" android:paddingLeft="20dp" android:paddingTop="8dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PUSH"/>
            <Button android:textSize="15dp" android:textColor="@drawable/btn_text" android:layout_gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/btnPro" android:background="@drawable/btn_bg" android:paddingLeft="20dp" android:paddingTop="5dp" android:paddingRight="20dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PRO"/>
            <TextView android:textSize="15dp" android:textColor="@drawable/btn_text" android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/tvVon" android:background="@drawable/btn_bg" android:paddingLeft="20dp" android:paddingTop="5dp" android:paddingRight="20dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00.00 v"/>
            <Button android:textSize="15dp" android:textColor="#ff03a5fa" android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:id="@+id/btnPID" android:background="@drawable/btn_off" android:paddingLeft="20dp" android:paddingTop="5dp" android:paddingRight="20dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Setting PID"/>
            <Button android:textSize="15dp" android:textColor="#ff03a5fa" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/btnNumber" android:background="@drawable/btn_off" android:paddingLeft="20dp" android:paddingTop="8dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4"/>
            <FrameLayout android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/layout_servo" android:layout_width="160dp" android:layout_height="50dp" android:layout_marginRight="10dp">
                <View android:layout_gravity="center" android:background="@drawable/bg" android:layout_width="match_parent" android:layout_height="25dp"/>
                <View android:layout_gravity="center" android:id="@+id/view_servo" android:background="@drawable/ball_blue" android:layout_width="40dp" android:layout_height="40dp"/>
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
    <com.icdayroi.smartcar.SettingView android:id="@+id/setting_view" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent"/>
</FrameLayout>
